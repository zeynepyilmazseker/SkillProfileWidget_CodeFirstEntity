@model SkillProfileWidget_CodeFirstEntity.Models.siniflar.Skill

@{
    ViewBag.Title = "YeniYetenek";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}

@using (Html.BeginForm("YeniYetenek", "Admin", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Aciklama, "Açıklama")
        @Html.TextBoxFor(m => m.Aciklama, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Deger, "Değer")
        @Html.TextBoxFor(m => m.Deger, new { @class = "form-control" })
    </div>
    <button class="btn btn-success">Yeni Yetenek Ekle</button>
}

